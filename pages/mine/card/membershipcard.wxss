  position: absolute;
  height: 430rpx;
  top: 0;
  left: 0;
  width: 100%;
  border-radius:24px;
  box-shadow: 0px 8rpx 20rpx 8rpx #e0e0e0;
}

.cardImg1::after {
  content: '';
  display: block;
  width: 0;
  height: 0;
}

.InfomationView {
  display: flex;
  flex-direction: column;
  margin-top: 80rpx;
  align-items: center;
  position: relative;
  padding:20px;
}

.infoTitle {
  text-align: center;
  margin-bottom: 10px;
  margin-top:20px;
}

.liInfo::before {
  content: '';
  width: 12px;
  height: 12px;
  background: #f9c56f;
  border-radius: 50%;
  display: block;
  position: absolute;
  left: 12px;
  margin-top: 6px;
}

.liInfo {
  margin-left: 30px;
  font-size: 16px;
  margin-right: 20rpx;
  margin-bottom: 15px;
}
.btnKaikaWrap{
  position:fixed;
  bottom:0;
  left:0;
  width:100%;
  padding-bottom:60rpx;
  background-color: #fff;
  box-shadow:0px 0px 30px 20px #fff;
}
.kaiKaBtn{
  width:80%;
  background-color:#f9c56f;
  left:0;
  font-size:16px;
  border-radius:33px;
}