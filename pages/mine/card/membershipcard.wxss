page {
  background-color: #fff;
}

.Card {
  padding: 55rpx;
  background-color: #ececec;
  height:100vh;
}

.cardImg {
  position: absolute;
  height: 430rpx;
  top: 0;
  border-radius:24px;
  left: 0;
  width: 100%;
}

.cardView {
  position: relative;
  height: 350rpx;
  border-radius: 50rpx;
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  color: #fff;
}

.cardInfo {
  height: 220rpx;
  border-radius: 50rpx;
  background-color: #fff;
  padding: 35px;
  font-size: 16px;
}

.cardViewTxt1 {
  margin-top: 20rpx;
  font-size: 44rpx;
  margin-bottom: 20rpx;
  z-index: 55;
}

.cardViewTxt2, .cardViewTxt3, .cardViewTxt4 {
  z-index: 55;
  font-size: 30rpx;
  margin-bottom: 10rpx;
  color: #fff0f0;
}

.cardLine {
  width: 275rpx;
  height: 7px;
  margin: 0 auto;
  display: block;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
}

.infoLeft {
  width: 200rpx;
  display: flex;
  flex-direction: column;
  float: left;
}

.infoRight {
  display: flex;
  flex-direction: column;
  float: left;
}

.infoLeft text {
  margin-top: 10rpx;
}

.infoRight text {
  margin-top: 10rpx;
}

/* 没有会员卡的情况 */

.noCard {
  /* width: 100%; */
  padding: 55rpx;
  padding-bottom:115px;
}

.cardImg1 {
  /* width:640rpx;
